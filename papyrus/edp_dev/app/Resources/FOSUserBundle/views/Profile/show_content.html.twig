

<div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="login-form">
                <h2 style="text-align: center">Mes abonnements</h2>
                
                {% for abonnements in abonnement %}
                {% if abonnements.isActive == true %}
                    
                <table class="table table-striped table-hover">
                    <thead>
                        <tr style="background:#F0F0E9">
                            <th>Libelle</th>
                            <th>Debut</th>
                            <th>Fin</th>
                            <th>Statut</th>
                            <th style="text-align:center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td>{{abonnements.libelle}}</td>
                                <td>{{abonnements.debut|date('Y-m-d')}}</td>
                                <td>{{abonnements.fin|date('Y-m-d')}}</td>
                                <td style="color:blue;font-weight: bold;"> Actif </td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path("edp_abo_liste_codes",{'id':abonnements.id}) }}"> Afficher vos codes </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                    </tbody>
                </table>
                    
                {% else %} 
                    
                    <table class="table table-striped table-hover">
                    <thead>
                        <tr style="background:#F0F0E9">
                            <th>Libelle</th>
                            <th>Debut</th>
                            <th>Fin</th>
                            <th>Statut</th>
                            <th style="text-align:center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td>{{abonnements.libelle}}</td>
                                <td>{{abonnements.debut|date('Y-m-d')}}</td>
                                <td>{{abonnements.fin|date('Y-m-d')}}</td>
                                <td style="color:red;font-weight: bold;"> Inactif </td>
                                 <td>
                                    <ul>
                                        <li>
                                            <span style="color:red">Attente de validation </span>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                    </tbody>
                </table>
                {% endif %}
                {% endfor %}
                 </div>
        </div>
    </div><hr />

