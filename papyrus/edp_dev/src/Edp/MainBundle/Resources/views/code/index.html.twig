{% extends "EdpMainBundle::page_niv2.html.twig" %}

{% block body -%}
    <h1 style="text-align:center">Liste des codes</h1>

    {#    <table class="records_list">#}
    <div class='row'>    
        <div class='col-sm-10 col-sm-offset-1'>    
            <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_codes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.prix }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_codes_show', { 'id': entity.id }) }}">Afficher</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_codes_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-primary pull-right" href="{{ path('admin_codes_new') }}">
                Ajouter un code
            </a>
        </li>
    </ul>
        </div>          
        </div>          
    {% endblock %}
