{% extends "EdpMainBundle::page_niv2.html.twig" %}

{% block n3 %}


    <h2 style="text-align: center">Liste des codes liés à votre abonnement "<em>{{abo.libelle}} </em>"</h2><br /><br />

     {#<br>{{user.username}}
    <br>
    {{abo.libelle}}
    <br>#}

    {% for code in codes %}

        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-form">

                    <table class="table table-striped table-hover record_properties">
                        <thead>
                            <tr style="background:#F0F0E9">
                                <th>Titre du code</th>
                                <th>Description</th>
                                <th style="text-align:center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{code.titre}}</td>
                                <td>{{code.description}}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path("edp_code_liste_articles",{'id':code.id}) }}"> Afficher vos articles </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                                        
                </div>
            </div>
        </div>

        {# <p>{{code.titre}}</p>
         <p>{{code.description}}</p>#}

    {% endfor %}

{% endblock n3 %}