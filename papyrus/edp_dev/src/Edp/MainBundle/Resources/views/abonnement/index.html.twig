{% extends "EdpMainBundle::page_niv2.html.twig" %}

{% block body -%}
    <h1 style="text-align:center">Liste des abonnements</h1>

    <div class='row'>    
        <div class='col-sm-10 col-sm-offset-1'>    
            <table class="table table-striped table-hover">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Libelle</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Is_active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
{#                <td><a href="{{ path('admin_abonnements_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                <td>{{ entity.libelle }}</td>
                <td>{% if entity.debut %}{{ entity.debut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fin %}{{ entity.fin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isActive }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_abonnements_show', { 'id': entity.id }) }}">Afficher</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_abonnements_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
        </div>

