{% extends "EdpMainBundle::page_niv2.html.twig" %}

{% block body -%}
    <h1 style="text-align:center">Liste des articles</h1>

    {#    <table class="records_list">#}
    <div class='row'>    
        <div class='col-sm-10 col-sm-offset-1'>    
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Nor</th>
                            {#                <th>Texte</th>#}
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('admin_article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.titre }}</td>
                            <td>{{ entity.nor }}</td>
                            {#                <td>{{ entity.texte }}</td>#}
                            <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('admin_article_show', { 'id': entity.id }) }}">Afficher</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin_article_edit', { 'id': entity.id }) }}">Modifier</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class='row'>    
        <div class='col-sm-10 col-sm-offset-1'>
            <ul>
                <li>
                    <a class="btn btn-primary pull-right" href="{{ path('admin_article_new') }}">
                        Ajouter un article
                    </a>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
