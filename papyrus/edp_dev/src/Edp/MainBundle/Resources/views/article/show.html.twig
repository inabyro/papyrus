{% extends "EdpMainBundle::page_niv2.html.twig" %}

{% block body -%}

    <div class='row'>    
        <div class='col-sm-6 col-sm-offset-3' style="border:1px solid black; border-radius:10px;margin-top:20px">
            <h1 style="text-align:center">Article</h1>

            <table class="record_properties">
                <tbody>
                    {#<tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr><br/>#}
                    <tr style="height:60px;">
                        <th>Titre</th>
                        <td>{{ entity.titre }}</td>
                    </tr>
                    <tr style="height:60px;">
                        <th>Nor</th>
                        <td>{{ entity.nor }}</td>
                    </tr>
                    <tr>
                        <th>Texte</th>
                        <td>{{ entity.texte }}</td>
                    </tr>
                    <tr style="height:60px;">
                        <th>Date</th>
                        <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>

            <ul class="record_actions">
                <li>
                    <a href="{{ path('admin_article') }}">
                        Retour Ã  la liste des articles
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_article_edit', { 'id': entity.id }) }}">
                        Modifier
                    </a>
                </li>
                <li>{{ form(delete_form) }}</li>
            </ul>

        </div>
    </div>
{% endblock %}
